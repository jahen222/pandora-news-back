{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 128
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "article_subcategory": {
      "model": "article-subcategory",
      "via": "articles"
    },
    "author": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "articles"
    }
  }
}
